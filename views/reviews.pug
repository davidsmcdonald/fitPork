extends layout

block main
  if reviewList.length === 0
    p#no_list You don't have any reviews. Why not create one?
  else
    div#reviews
      each review in reviewList
        div.list_box
          a(href=`/reviews/${review.id}`)
            h2.list= review.artist
            h3.list= review.title

block headerLinks
  .actions
    a.add(href="/reviews/new") Add a review
    form(method="post" action="/users/signout")
      input(type="hidden" name="extra_submit_param" value="extra_submit_value")
      button(type="submit" value="") Sign Out
    div
      img.logo(src="/images/logo.png" alt="flying pigs logo")
