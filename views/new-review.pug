extends layout

block main
  form(action="/review" method="post")
    dl
      dt
        label(for="artist") Enter the artist name for your new review:
      dd
        input(type="text"
              id="artist"
              name="artist"
              placeholder="Artist"
              value=artist)
              
      dt
        label(for="title") Enter the album title for your new review:
      dd
        input(type="text"
              id="title"
              name="title"
              placeholder="Title"
              value=title)
      dt
        label(for="score") Enter the rating for your new review (0-100):
      dd
        input(type="number"
              id="score"
              name="score"
              placeholder="Score"
              value=score)
              
      dt
        label(for="cover_url") Enter the url for your album art. You can find most at #[a(href="https://musicbrainz.org/") musicbrainz.org]. jpg, gif, or png formats only!: 
      dd
        input(type="text"
              id="url"
              name="url"
              placeholder="https://..."
              value=url)
              
      dt
        label(for="reviewText") Enter the text of your review:
      dd
        textarea(id="reviewText"
              name="reviewText"
              placeholder="Review Text"
              value=reviewText)
      
      dt
        label(for="details") Enter additional details to display:
      dd
        textarea(id="details"
              name="details"
              placeholder="Details"
              value=details)

    fieldset.actions
      input(type="submit" value="Save")
      a(href="/reviews") Cancel
